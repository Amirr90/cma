<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical" xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ViewAllDocumentActivity">


    <androidx.cardview.widget.CardView
        android:id="@+id/show_toolbar_cardview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="3dp">


        <androidx.appcompat.widget.Toolbar
            android:id="@+id/view_document_toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:minHeight="?attr/actionBarSize"
            android:theme="@style/ToolbarTheme" />
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/view_document_textView34"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/mangal"
        android:padding="@dimen/_10sdp" />
    <com.dinuscxj.refresh.RecyclerRefreshLayout
        android:id="@+id/view_document_refresh_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:elevation="10dp">


        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/view_document_rec"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            tools:listitem="@layout/home_view" />

    </com.dinuscxj.refresh.RecyclerRefreshLayout>
</LinearLayout>